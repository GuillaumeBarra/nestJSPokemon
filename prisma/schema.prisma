// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// prisma/schema.prisma

model Pokemon {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  abilities String[]
  level     Int      @default(1)
  types     Type[]   @relation("PokemonType")
}

model Type {
  id       Int       @id @default(autoincrement())
  type     String    @unique
  pokemons Pokemon[] @relation("PokemonType")
}
